@model List<Technines_irangos_rezervacij.Models.EquipmentType>
@{
    ViewBag.Title = "Equipment types";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-container equipment-types-page">
    <h2>Įrangos tipai</h2>

    <a href="#" class="btn-primary">Naujas tipas</a>

    @if (Model.Count > 0)
    {
        <table>
            <thead>
                <tr>
                    <th>Pavadinimas</th>
                    <th>Aprašymas</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var type in Model)
                {
                    <tr>
                        <td>@Html.ActionLink(type.Name, "TypeDetails", "Equipment", new {id = type.Id}, null)</td>
                        <td>@type.Description</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Sistemoje nėra įvesta įrangos tipų. Pridėkite dabar.</p>
    }

</div>
